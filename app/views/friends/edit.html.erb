<div class="container">
  <div class="row">
  <div class="col-md-12">

        <h3>Edit your rental:</h3>
        <%= simple_form_for [@user, @friend] do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :category %>
          <%= f.input :language %>
          <%= f.input :price %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit, class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>
