<div class="container">
  <%= link_to "All Friends", friends_path, class:"button-banner" %>
  <div class="banner">
    <div class="banner-infos">
      <h1>Welcome to <strong>airbnweird</strong></h1>
      <h3 class="banner-title">You are unique, you deserve a best friend just like you.</h3>
    </div>
  </div>

  <div class="row">
    <% @friends.each do |friend| %>
      <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-3">
        <div class="friend-tile">
          <%= cl_image_tag friend.photo.key, height: 200, width: 100, crop: :fill %>
          <div class="friend-tile-content">
            <div class="friend-tile-content-up">
              <h5><%= friend.name %></h5>
              <h6><%= friend.category %></h6>
              <p><%= friend.description %></p>
            </div>
            <div class="d-flex justify-content-between">
              <span><i class="fa-solid fa-euro-sign"></i><%= friend.price %>â‚¬</span>
              <span><i class="fa-solid fa-star"></i>-</span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
