<div class="row">
  <% @friends.each do |friend| %>
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-3">
          <%= link_to friend_path(friend.id), class: "link_card" do %>
            <div class="friend-tile">
              <%= cl_image_tag friend.photo.key, height: 200, width: 100, crop: :fill %>
              <div class="friend-tile-content">
                <div class="friend-tile-content-up">
                  <h5><%= friend.name %></h5>
                  <h6><%= friend.category %></h6>
                  <p><%= friend.description %></p>
                </div>
                <div class="d-flex justify-content-between">
                  <span><i class="fa-solid fa-euro-sign"></i><%= friend.price %>€</span>
                  <span><i class="fa-solid fa-star"></i>-</span>
                </div>
              </div>
            </div>
          <% end %>
      </div>
  <% end %>

<div class="friends">
  <% @friends.each do |friend| %>
    <%= link_to friend_path(friend.id), class: "link_card" do %>
      <div class="friend-card"
        data-controller="card"
        data-action="mouseover->card#showCard mouseout->card#hideCard">
          <div class="image"
            data-card-target="image">
              <%= cl_image_tag friend.photo.key, class:"image" %>
          </div>
          <div class="friend-content disable w-100 h-100"
            data-card-target="content">
            <h5><%= friend.name %></h5>
            <h6><%= friend.category %></h6>
            <p><%= friend.description %></p>
            <span><i class="fa-solid fa-euro-sign"></i><%= friend.price %>€</span>
            <span><i class="fa-solid fa-star"></i>-</span>
          </div>
        </div>
    <% end %>
  <% end %>
</div>
